{
  "name": "pallas",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "npm run build && concurrently \"npm run build:watch\" \"npm run start:watch\"",
    "start:watch": "nodemon --watch \"dist/**/*\" -e js ./dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "dotenv -e .env.test -- node database-test-connection.mjs && dotenv -e .env.test -- npm run prisma:deploy && dotenv -e .env.test -- jest -i -c jest-e2e.config.js",
    "test:coverage": "jest --coverage",
    "build": "swc src --copy-files --no-swcrc --config-file .swcrc.build -d dist",
    "build:watch": "swc src -w --copy-files --no-swcrc --config-file .swcrc.build -d dist",
    "docker:tests:up": "docker compose -f docker-compose.test.yml up -d",
    "docker:tests:down": "docker compose -f docker-compose.test.yml down",
    "docker:dev:up": "docker compose -f docker-compose.development.yml up -d",
    "docker:dev:down": "docker compose -f docker-compose.development.yml down",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:deploy:dev": "dotenv -e .env.development -- prisma migrate deploy",
    "prisma:migrate": "dotenv -e .env.development -- prisma migrate dev",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/client": "^4.7.1",
    "@sentry/node": "^7.24.2",
    "@sentry/tracing": "^7.24.2",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.9",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.9",
    "@swc/jest": "^0.2.23",
    "@types/node": "^18.11.0",
    "axios": "^1.6.0",
    "concurrently": "^7.4.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.0",
    "nodemon": "^2.0.20",
    "prisma": "^4.7.1",
    "retry": "^0.13.1",
    "supertest": "^6.3.0"
  }
}
